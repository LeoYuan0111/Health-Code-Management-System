<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.healthcodebe.mapper.VaccineMapper">
    <resultMap id="BaseVaccineMap" type="com.example.healthcodebe.entity.Vaccine">
        <result column="provider" property="provider" jdbcType="VARCHAR"/>
        <result column="vacc_id" property="vaccId" jdbcType="INTEGER"/>
        <result column="date" property="date" jdbcType="TIMESTAMP"/>
        <result column="expiration_date" property="expirationDate" jdbcType="TIMESTAMP"/>
    </resultMap>

    <insert id="addVaccine" useGeneratedKeys="true" keyProperty="vaccId" parameterType="com.example.healthcodebe.entity.Vaccine">
        INSERT INTO vaccine
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="provider != null">provider,</if>
            <if test="date != null">date,</if>
            <if test="expirationDate != null">expiration_date,</if>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <if test="provider != null">#{provider},</if>
            <if test="date != null">#{date},</if>
            <if test="expirationDate != null">#{expirationDate},</if>
        </trim>
    </insert>
</mapper>
